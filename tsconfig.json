{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "ES5",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "lib",
    "baseUrl": ".",
    "lib": [
      "es5",
      "es2015.promise"
    ]
  },
  "include": [
    "./cleanup/**/*",
    "./src/**/*",
    "./test/**/*"
  ]
}
